@model List<Booking>

@{
    ViewData["Title"] = "Pet Hotel Index";
}

<h3>All Bookings</h3>
<span style="color:red">@TempData["Msg"]</span>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th scope="col" width="25%">Booking ID</th>
        <th scope="col" width="25%">Pet Name</th>
        <th scope="col" width="25%">Owner Name</th>
        <th scope="col" width="25%">Check-In Date</th>
    </tr>
    @foreach (Booking b in Model!)
    {
        <tr>
            <td width="25%">@b.Id</td>
            <td width="25%">@b.PetName</td>
            <td width="25%">@b.OwnerName</td>
            <td width="25%">@b.CheckInDate.ToString("dd-MM-yyyy")</td>
        </tr>
    }
</table>

